<Window x:Class="POE_Attempt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:POE_Attempt"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="535"
        Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Background.jpg"/>
    </Window.Background>

    <!-- Root Layout Grid -->
    <Grid Height="535">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF2CE7FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="638*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Padding="15" Grid.ColumnSpan="5">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF2CE7FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="Cybersecurity Awareness Chatbot"
                           FontSize="40"
                           FontStyle="Italic"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10" FontFamily="Comic Sans MS" TextDecorations="Underline"/>
                <TextBlock x:Name="AsciiArtDisplay"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           FontSize="10"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0"/>
            </StackPanel>
        </Border>

        <!-- Main Card Layout -->
        <materialDesign:Card Grid.Row="1"
                             Margin="4,10,10,10"
                             UniformCornerRadius="15" Grid.ColumnSpan="4" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="3*"/>
                    <!-- Chat Area -->
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="materialDesign:PackIcon">
                        <Setter Property="Width" Value="90"></Setter>
                        <Setter Property="Height" Value="30"></Setter>
                    </Style>
                </Grid.Resources>
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF2CE7FF" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <!-- Sidebar -->
                <Grid Grid.Column="0" 
                      Width="110"
                      HorizontalAlignment="Left">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF2CE7FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <ListView 
                        
                        Margin="0 15"
                        Width="100" 
                        HorizontalAlignment="Left">
                        <ListView.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FF2CE7FF" Offset="0.3"/>
                            </LinearGradientBrush>
                        </ListView.Background>
                        <ListViewItem HorizontalAlignment="Center" Margin="0 10">
                            <Button 
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon 
                                        Name="Chat_Bot_Ascii"
                                        MouseDoubleClick="Show_ChatBot_Ascii"
                                        Kind="Person" 
                                        Opacity="0.985"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                        <ListViewItem HorizontalAlignment="Center" Margin="0 10">
                            <Button 
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon 
                                        Name="Task_Assistant_GUI"
                                        MouseDoubleClick="Initialize_Task_Assistant"
                                        Kind="CircleSlice6"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                        <ListViewItem HorizontalAlignment="Center" Margin="0 10">
                            <Button Click="Reminder"
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon 
                                        Name="NLP_Simulation_GUI"
                                        MouseDoubleClick="show_NLP_Simulation_GUI"
                                        Kind="EmojiAngryOutline"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                        <ListViewItem HorizontalAlignment="Center" Margin="0 10">
                            <Button 
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon 
                                        Name="Cyber_Security_Mini_Game"
                                        MouseDoubleClick="show_Cyber_Security_Mini_Game"
                                        Kind="EqualiserVertical"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                        <ListViewItem HorizontalAlignment="Center" Margin="0 10">
                            <Button 
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon 
                                        Name="Activity_Log"
                                        MouseDoubleClick="show_Activity_Log"
                                        Kind="ChatBubbleOutline"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                        <ListViewItem HorizontalAlignment="Center" Margin="0 15 0 0">
                            <Button 
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon 
                                        Name="Exit_Application"
                                        MouseDoubleClick="Exit_App"
                                        Kind="ExitToApp"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                    </ListView>
                </Grid>

                <!-- Chat Section -->
                <Grid Margin="110,10,10,10" 
                      Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="104*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Display -->
                    <ListView x:Name="show_chats"
                              Grid.Row="0"
                              Margin="0,0,0,5"                              
                              HorizontalAlignment="Center" 
                              Width="660" Background="#FF2CE7FF" Grid.RowSpan="2"/>

                    <!-- Input -->
                    <TextBox x:Name="user_question"
                             Grid.Row="1"
                             Margin="0,207,97,0" IsReadOnly="False" Grid.RowSpan="3" Background="#FFF3F3F3" FontSize="20"/>

                    <!-- Submit Button -->
                    <Button
                            
                            Grid.Row="1"
                            MouseDoubleClick="show_chats_MouseDoubleClick" 
                            Margin="572,211,0,5" 
                            Background="#FF2CE7FF">
                        <materialDesign:PackIcon Kind="Send"/>
                    </Button>
                    <StackPanel Margin="20"/>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
