<Window x:Class="POE_Attempt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:POE_Attempt"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">

    <!-- Root Layout Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#00C8FF"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Cybersecurity Awareness Chatbot"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="AsciiArtDisplay"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           FontSize="10"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0"/>
            </StackPanel>
        </Border>

        <!-- Main Card Layout -->
        <materialDesign:Card Grid.Row="1"
                             Margin="10"
                             UniformCornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="3*"/>
                    <!-- Chat Area -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Grid Grid.Column="0" 
                      Width="110"
                      HorizontalAlignment="Left">
                    <ListView 
                        Margin="0 15"
                        Width="100" 
                        HorizontalAlignment="Left">

                        <ListViewItem HorizontalAlignment="Center" Margin="0 10">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    HorizontalAlignment="Left"
                                    BorderBrush="{x:Null}"
                                    Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon Kind="Resistor"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                    </ListView>
                </Grid>

                <!-- Chat Section -->
                <Grid Margin="110,10,10,10" 
                      Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Display -->
                    <ListView x:Name="show_chats"
                              Grid.Row="0"
                              Height="200"
                              Margin="0,15,0,25"
                              MouseDoubleClick="show_chats_MouseDoubleClick"
                              HorizontalAlignment="Right" 
                              Width="659"/>

                    <!-- Input -->
                    <TextBox x:Name="user_question"
                             Grid.Row="1"
                             Height="30"
                             Margin="0,0,0,10"/>

                    <!-- Submit Button -->
                    <Button 
                            Grid.Row="2"
                            Height="30"
                            Click="Ask_QuestionButton"/>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
