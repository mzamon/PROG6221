<Window x:Class="POE_Attempt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:POE_Attempt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid
        Height = "450"
        Width = "800"
        >
        <materialDesign:Card
            Margin="10"
            UniformCornerRadius="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="15*"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="materialDesign:PackIcon">
                        <Setter Property="Width" 
                                Value="30">
                        </Setter>
                        <Setter Property="Height" 
                                Value="30">
                        </Setter>

                    </Style>
                </Grid.Resources>
                <Grid Grid.Column="0">
                    <ListView
                        Margin="0 15">
                        <ListViewItem 
                            HorizontalAlignment="Center"
                            Margin="0 10">
                            <Button 
                                Style="{StaticResource MaterialDesignFloatingActionButton}"
                                HorizontalAlignment="Left"
                                BorderBrush="{x:Null}"
                                Background="{x:Null}"
                                Foreground="Black">
                                <StackPanel
                                    Margin="-5">
                                <materialDesign:PackIcon
                                        Kind="Resistor"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                    </ListView>
                </Grid>
            </Grid>
        </materialDesign:Card>
        <!-- Header-->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource PrimaryBrush}" Padding="15">
            <StackPanel>
                <TextBlock Text="Cybersecurity Awareness Chatbot" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock x:Name="AsciiArtDisplay" FontFamily="Consolas" TextWrapping="Wrap" FontSize="10" Foreground="White" HorizontalAlignment="Center" Margin="0"/>
            </StackPanel>
        </Border>
        <!-- Main chat panel -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>


            <!-- listview to show chats-->
        <ListView
            Height= "300"
            Width= "350"
            x:Name="show_chats"
            MouseDoubleClick="show_chats_MouseDoubleClick"
            Margin="0,0,0,0"
            />
        
        <!-- textbox to collect user input -->
        <TextBox
            Height="300"
            Width="350"
            x:Name="user_question"
            Margin="0,250,0,0"
            />
        
        <!-- button to submit question-->
        <Button
            Height="30"
            Width="350"
            Content="Ask Question"
            Margin="0,300,0,0"
            Click="Ask_QuestionButton"
            />

    </Grid>
</Window>
