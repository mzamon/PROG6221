@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Track Claim";
}

<div class="track-claim-container">
    <h2>Track Your Claim</h2>

    <form method="post" class="track-claim-form">
        <div class="organic-field">
            <div class="field-nature"></div>
            <input type="text" id="lectureId" name="lectureId" placeholder=" " required />
            <label for="lectureId">Enter Lecture ID</label>
            <div class="growth-indicator">
                <div class="leaf-sprout"></div>
            </div>
        </div>

        <button type="submit" class="harmony-button">
            <span class="button-earth"></span>
            <span class="button-text">Track Claim</span>
            <span class="button-growth">
                <span class="growing-circle circle-1"></span>
                <span class="growing-circle circle-2"></span>
                <span class="growing-circle circle-3"></span>
            </span>
            <span class="button-aura"></span>
        </button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="gentle-error show">
            @ViewBag.Error
        </div>
    }

    @if (ViewBag.LectureID != null)
    {
        <div class="claim-result">
            <h3>Claim Details</h3>
            <table style="width:100%;">
                <tr>
                    <td style="width:40%; padding:12px 0; font-weight:600;">Lecture ID:</td>
                    <td style="padding:12px 0;">@ViewBag.LectureID</td>
                </tr>
                <tr>
                    <td style="padding:12px 0; font-weight:600;">Hours worked:</td>
                    <td style="padding:12px 0;">@ViewBag.HoursWorked</td>
                </tr>
                <tr>
                    <td style="padding:12px 0; font-weight:600;">Hourly Rate:</td>
                    <td style="padding:12px 0;">R @ViewBag.HourlyRate</td>
                </tr>
                <tr>
                    <td style="padding:12px 0; font-weight:600;">Additional Notes:</td>
                    <td style="padding:12px 0;">@ViewBag.AdditionalNotes</td>
                </tr>
                <tr>
                    <td style="padding:12px 0; font-weight:600;">Supporting Documents:</td>
                    <td style="padding:12px 0;">@ViewBag.SupportingDocuments</td>
                </tr>
            </table>

            <div class="claim-status">
                <h4>Claim Status</h4>
                <div>@ViewBag.Status</div>
            </div>
        </div>
    }
</div>