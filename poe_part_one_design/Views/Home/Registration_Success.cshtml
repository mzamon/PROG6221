@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registration Successful";
}

<div class="registration-success">
    <div class="success-icon">✓</div>
    <h2 style="color:#2196f3;">Registration Successful!</h2>

    <div class="claim-details">
        <p>Congratulations <strong>@ViewBag.Name</strong>, your account has been successfully created.</p>
        <p>You can now login with your credentials.</p>
    </div>

    <a href="@Url.Action("Login","Home")" class="btn-primary">Proceed to Login</a>
</div>