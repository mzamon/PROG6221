@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Claim Submitted";
}

<div class="claim-success">
    <div class="success-icon">✓</div>
    <h2 style="color:#2196f3;">Claim Submitted Successfully!</h2>
    <p>Your claim has been submitted for processing. Below are your submitted details:</p>

    <div class="claim-summary">
        <div class="summary-item">
            <span class="summary-label">Lecture ID:</span>
            <span class="summary-value">@ViewBag.LectureID</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Hours Worked:</span>
            <span class="summary-value">@ViewBag.HoursWorked</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Hourly Rate:</span>
            <span class="summary-value">R @ViewBag.HourlyRate</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Additional Notes:</span>
            <span class="summary-value">@ViewBag.AdditionalNotes</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Supporting Documents:</span>
            <span class="summary-value">@ViewBag.SupportingDocuments</span>
        </div>
        <div class="summary-total">
            <span class="total-label">Total Amount:</span>
            <span class="total-value">R @((ViewBag.HoursWorked * ViewBag.HourlyRate).ToString("N2"))</span>
        </div>
    </div>

    <div class="claim-actions">
        <a href="@Url.Action("Track_Claim","Home")" class="btn-primary">Track This Claim</a>
        <a href="@Url.Action("LecturerPartial","Home")" class="btn-secondary">Submit Another Claim</a>
        <a href="@Url.Action("Dashboard","Home")" class="btn-secondary">Return to Dashboard</a>
    </div>
</div>