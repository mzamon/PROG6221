@* Partial: Lecturer View*@

<div class="lecturer-view">
	<h2>
		Lecturer Claim Submission
	</h2>

	<form>
		<div class="form-group">
			<label for="hours">Hours Worked</label>
			<input type="number" id="hours" class="form-control" placeholder="Enter hours" />
		</div>

		<div class="form-group">
			<label for="rate">Hourly Rate</label>
			<input type="number" id="rate" class="form-control" placeholder="Enter rate" />
		</div>

		<div class="form-group">
			<label for="notes">Additional Notes</label>
			<textarea id="notes" class="form-control" placeholder="Enter Notes"></textarea>
		</div>

		<div class="form-group">
			<label for="upload">Upload Supporting Documents</label>
			<input type="file" id="upload" class="form-control" />
		</div>

		<button type="button" class="btn-submit">Submit Claim</button>
	</form>
</div>